@model IEnumerable<BookingViewModel>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Bookings</h1>
    <a asp-controller="Properties" asp-action="Search" class="btn btn-primary">Find New Property</a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Filter Bookings</h5>
                </div>
                <div class="card-body">
                    <form method="get">
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select name="status" class="form-select" onchange="this.form.submit()">
                                <option value="">All</option>
                                <option value="Upcoming">Upcoming</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sort By</label>
                            <select name="sortBy" class="form-select" onchange="this.form.submit()">
                                <option value="date_desc">Date (newest first)</option>
                                <option value="date_asc">Date (oldest first)</option>
                                <option value="price_desc">Price (highest first)</option>
                                <option value="price_asc">Price (lowest first)</option>
                            </select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <h3>You don't have any bookings yet</h3>
            <p class="text-muted">Start by searching for properties and book your next stay!</p>
            <a asp-controller="Properties" asp-action="Search" class="btn btn-primary btn-lg mt-3">Find Properties</a>
        </div>
    </div>
}