@model UserProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="row">
    <div class="col-md-4">
        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Profile Information</h3>
            </div>
            <div class="card-footer">
                <a href="#" class="btn btn-outline-primary w-100">Edit Profile</a>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Recent Activity</h3>
            </div>
            <div class="card-body">
                @if (Model.RecentBookings != null && Model.RecentBookings.Any())
                {
                    <div class="text-center mt-3">
                        <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-primary">View All Bookings</a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <p class="text-muted">You don't have any recent bookings.</p>
                        <a asp-controller="Properties" asp-action="Search" class="btn btn-primary">Find Properties</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>